<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Signup</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- 사용자 정의 스타일 -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<!-- 중앙 정렬된 로그인 폼 -->
<!-- 로그인 폼 위치 조정 -->
<body class="d-flex flex-column min-vh-100">
{{>layouts/header}}

<div class="flex-grow-1 d-flex justify-content-center align-items-start" style="padding-top: 60px;">
    <form class="border rounded p-4 bg-white shadow custom-form" action="/join" method="post">
        <h3 class="text-center mb-4">회원가입</h3>
        <table class="table table-borderless mb-4">
            <tbody>
            <tr class="mb-4">
                <td><label class="form-label" for="name">이름</label></td>
                <td><input class="form-control" type="text" id="name" name="name"/></td>
            </tr>
            <tr class="mb-4">
                <td><label class="form-label" for="userid">아이디</label></td>
                <td><input class="form-control" type="text" id="userid" name="userid"/></td>
            </tr>
            <tr class="mb-4">
                <td><label class="form-label" for="password">비밀번호</label></td>
                <td><input class="form-control" type="password" id="password" name="password"/></td>
            </tr>
            <tr class="mb-4">
                <td colspan="2">
                    <label class="form-label" style="display: flex; align-items: center;">
                        <input type="checkbox" id="checkbox" name="checkbox" style="margin-right: 8px;" />
                        개인정보 수집 동의
                    </label>
                </td>
            </tr>

            </tbody>
        </table>
        <div class="text-center">
            <button type="submit" class="btn btn-success" id="submitBtn" disabled>회원가입</button>
        </div>
    </form>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const checkbox = document.getElementById('checkbox');
        const submitBtn = document.getElementById('submitBtn');

        checkbox.addEventListener('change', function () {
            submitBtn.disabled = !this.checked;
        });
    });
</script>
{{>layouts/footer}}

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
